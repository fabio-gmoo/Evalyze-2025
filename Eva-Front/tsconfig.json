{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@pages/*":        ["src/app/pages/*"],
      "@components/*":   ["src/app/components/*"],
      "@widgets/*":      ["src/app/components/widgets/*"],
      "@interfaces/*":   ["src/app/interfaces/*"],
      "@environment":    ["src/app/environments/environment"],
      "@environments/*": ["src/app/environments/*"],

      /* === NUEVO: alias para /core === */
      "@core/*":              ["src/app/core/*"],
      "@core/services/*":     ["src/app/core/services/*"],

      /* (si quieres mantener @services como sinónimo de @core/services) */
      "@services/*":          ["src/app/core/services/*"],

      "@assets/*":       ["src/assets/*"],
      "@shared/*":       ["src/app/shared/*"]
    },

    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "preserve",

    /* Evita los ts2571 si tienes algún catch sin tipar en el proyecto */
    "useUnknownInCatchVariables": false
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "typeCheckHostBindings": true,
    "strictTemplates": true
  },
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.spec.json" }
  ]
}
