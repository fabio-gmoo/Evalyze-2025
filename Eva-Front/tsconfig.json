{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@pages/*":        ["src/app/pages/*"],
      "@components/*":   ["src/app/components/*"],
      "@widgets/*":      ["src/app/components/widgets/*"],
      "@interfaces/*":   ["src/app/interfaces/*"],
      "@environment":    ["src/app/environments/environment"],
      "@environments/*": ["src/app/environments/*"],

      /* üëá alias correcto para tus servicios reales */
      "@services/*":     ["src/app/services/*"],

      /* opcional: solo si realmente usas /core en otros imports */
      "@core/*":         ["src/app/core/*"],

      "@assets/*":       ["src/assets/*"],
      "@shared/*":       ["src/app/shared/*"]
    },

    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "target": "ES2022",
    "module": "preserve",

    /* Evita los ‚ÄúObject is of type 'unknown'‚Äù en catch */
    "useUnknownInCatchVariables": false
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "typeCheckHostBindings": true,
    "strictTemplates": true
  },
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.spec.json" }
  ]
}
